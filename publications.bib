@article{2019.Maeda_etal.pasj,
  author       = {Maeda, Yoshitomo and Iizuka, Ryo and Hayashi,
                  Takayuki and Sato, Toshiki and Nakaniwa, Nozomi and
                  Takeo, Mai and Suzuki, Hitomi and Ishida, Manabu and
                  Ikeda, Shiro and Morii, Mikio},
  title        = {A concept for {X}-ray telescope system with an
