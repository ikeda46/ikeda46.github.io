@inproceedings{2023.Taniguchi_etal.ursi,
  author       = {Taniguchi, Akio and Tamura, Yoichi and Ikeda, Shiro and
                  Takekoshi, Tatsuya and Kawabe, Ryohei and Kohno, Kotaro and
                  Sakai, Takeshi},
  booktitle    = {2023 XXXVth General Assembly and Scientific Symposium of the
